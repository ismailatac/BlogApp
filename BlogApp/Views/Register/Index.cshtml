<body>

	<!--//banner-->
	<!--/main-->
	<section class="main-content-w3layouts-agileits">
		<div class="container">
			<h3 class="tittle">Yazar Kayıt Sayfası</h3>
			<div class="inner-sec">
				<div class="login p-5 bg-light mx-auto mw-100">
					@using (Html.BeginForm("Index", "Register", FormMethod.Post))
					{
					 <div class="form-row">
							<div class="col-md-6 mb-3">
								<label for="validationCustom01">Adınız soyadınız</label>
								@Html.TextBoxFor(x => x.Name, new{@class = "form-control"})
								@Html.ValidationMessageFor(x => x.Name,"", new{@class = "text-danger"})
								@*<input type="text" class="form-control" name="Name" id="validationDefault01" placeholder="" required="">*@
							</div>
							<div class="form-group col-md-6">
								<label for="exampleInputPassword2 mb-2">Görsel Dosya Yolu</label>
								@*<input type="text" class="form-control" name="Image" id="password2" placeholder="" required="">*@
								@Html.TextBoxFor(x => x.Image, new{@class = "form-control"})
								@Html.ValidationMessageFor(x => x.Image,"", new{@class = "text-danger"})
							</div>
							
						</div>
						<div class="form-row">
							<div class="form-group col-md-6">
								<label for="exampleInputPassword1 mb-2">Mail adresi</label>
								@Html.TextBoxFor(x => x.Mail, new{@class = "form-control"})
								@Html.ValidationMessageFor(x => x.Mail,"", new{@class = "text-danger"})
								@*<input type="email" class="form-control" name="Mail" id="password1" placeholder="" required="">*@
							</div>
							<div class="form-group col-md-6">
								<label for="exampleInputPassword2 mb-2">Şifre</label>
								@Html.TextBoxFor(x => x.Password, new{@class = "form-control"})
								@Html.ValidationMessageFor(x => x.Password,"", new{@class = "text-danger"})
								@*<input type="password" class="form-control" name="Password" id="password2" placeholder="" required="">*@
							</div>
						</div>
						<button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
						<p>
							<a href="#" id="btn1">Tüm şartları okudum, kabul ediyorum.</a>
						</p>
					
					}
				</div>
			</div>
		</div>
	</section>
	<script>
		$('#btn1').click(function ()
		{
			Swal.fire({
				title: '<strong><u>Hizmet şartları</u></strong>',
				icon: 'info',
				html:
					'Bütün şartları <b>okudum</b>, ' +
					'kabul ediyorum '
					,
				showCloseButton: true,
				showCancelButton: true,
				focusConfirm: false,
				confirmButtonText:
					'Evet',
				confirmButtonAriaLabel: 'Thumbs up, great!',
				cancelButtonText:
					'Hayır',
				cancelButtonAriaLabel: 'Thumbs down'
			})
			
		});
	</script>
	</body>