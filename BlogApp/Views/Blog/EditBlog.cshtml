@using Entities
@model Blog
@{
    ViewData["Title"] = "EditBlog";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Blog Düzenleme Sayfası</h1>
@using (Html.BeginForm("EditBlog", "Blog", FormMethod.Post))
{
    @Html.Label("Blog Başlığı")
    @Html.TextBoxFor(x => x.Title, new {@class = "form-control"})
    @Html.ValidationMessageFor(x => x.Title)
    <br />
    @Html.Label("Blog Görseli")
    @Html.TextBoxFor(x => x.Image, new {@class = "form-control"})
    @Html.ValidationMessageFor(x => x.Image)
    <br />
    @Html.Label("Blog Küçük Görseli")
    @Html.TextBoxFor(x => x.ThumbnailImage, new {@class = "form-control"})
    @Html.ValidationMessageFor(x => x.ThumbnailImage)
    <br />
    @Html.Label("Blog Kategorisi")
    @Html.DropDownListFor(x => x.CategoryId,(List<SelectListItem>)ViewBag.CategoryValues,new{@class="form-control"})
    <br />
    @Html.Label("Blog İçeriği")
    @Html.TextAreaFor(x => x.Content,10,3, new {@class = "form-control"})
    @Html.ValidationMessageFor(x => x.Content)
    <br />
    <input name="WriterId" type="hidden" value=@Model.WriterId />
    <input name="BlogId" value="@Model.BlogId" type="hidden" />
    <input name="CreateDate" value="@Model.CreateDate" type="hidden" />
    <input name="Status" value="@Model.Status.ToString()" type="hidden" />
    <input name="CategoryId" value="@Model.CategoryId" type="hidden" />
    
    <button type="submit" class="btn btn-info">Blogu güncelle</button>
}
